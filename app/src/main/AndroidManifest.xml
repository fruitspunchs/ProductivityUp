<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="finalproject.productivityup"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".libs.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.deadlines.DeadlinesActivity"
            android:label="@string/title_activity_deadlines"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.agenda.AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.accountability.AccountabilityActivity"
            android:label="@string/title_activity_accountability_chart"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.deadlines.AddDeadlineActivity"
            android:label="@string/title_activity_add_deadline"
            android:parentActivityName=".ui.deadlines.DeadlinesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.deadlines.DeadlinesActivity"/>
        </activity>
        <activity
            android:name=".ui.deadlines.EditDeadlineActivity"
            android:label="@string/title_activity_add_deadline"
            android:parentActivityName=".ui.deadlines.DeadlinesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.deadlines.DeadlinesActivity"/>
        </activity>
        <activity
            android:name=".ui.agenda.AddAgendaActivity"
            android:label="@string/title_activity_add_agenda"
            android:parentActivityName=".ui.agenda.AgendaActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="finalproject.productivityup.ui.agenda.AgendaActivity"/>
        </activity>
        <activity
            android:name=".ui.agenda.EditAgendaActivity"
            android:label="@string/title_activity_edit_agenda"
            android:parentActivityName=".ui.agenda.AddAgendaActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="finalproject.productivityup.ui.agenda.AddAgendaActivity"/>
        </activity>
        <activity
            android:name=".ui.accountability.AddAccountabilityActivity"
            android:label="@string/title_activity_add_accountability"
            android:parentActivityName=".ui.accountability.AccountabilityActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.accountability.AccountabilityActivity"/>
        </activity>
        <activity
            android:name=".ui.accountability.EditAccountabilityActivity"
            android:label="@string/title_activity_edit_accountability"
            android:parentActivityName=".ui.accountability.AccountabilityActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="finalproject.productivityup.ui.accountability.AccountabilityActivity"/>
        </activity>

        <!-- Widget-->
        <receiver
            android:name=".widget.TimerAppWidgetProvider"
            android:enabled="true"
            android:label="ProductivityUp">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/timer_appwidget_info"/>
        </receiver>

        <!-- Service-->
        <service
            android:name=".service.TimerService"
            android:exported="false"/>

        <!-- Provider-->
        <provider
            android:name=".data.generated.ProductivityProvider"
            android:authorities="finalproject.productivityup.data.ProductivityProvider"
            android:exported="false"/>
    </application>
</manifest>
