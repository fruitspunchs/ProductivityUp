<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="finalproject.productivityup"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.deadlines.DeadlinesActivity"
            android:label="@string/title_activity_deadlines"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.agenda.AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.accountability.AccountabilityChartActivity"
            android:label="@string/title_activity_accountability_chart"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.deadlines.AddDeadlineActivity"
            android:label="@string/title_activity_add_deadline"
            android:parentActivityName=".ui.deadlines.DeadlinesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.deadlines.DeadlinesActivity"/>
        </activity>
        <activity
            android:name=".ui.deadlines.EditDeadlineActivity"
            android:label="@string/title_activity_add_deadline"
            android:parentActivityName=".ui.deadlines.DeadlinesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.deadlines.DeadlinesActivity"/>
        </activity>

        <provider
            android:name="finalproject.productivityup.data.generated.ProductivityProvider"
            android:authorities="finalproject.productivityup.data.ProductivityProvider"
            android:exported="false" />
        <service
            android:name=".ui.AlarmPlayerService"
            android:exported="false"/>
    </application>

</manifest>
